@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>Seyehat Rezervasyon Firma Yönetim Paneli</title>
    <link rel="shortcut icon" href="~/Galeri/title.png" />
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        .fakeimg {
            height: 200px;
            background: #aaa;
        }

        body {
            font-family: "Lato", sans-serif;
        }

        .sidenav {
            height: 100%;
            width: 0;
            position: fixed;
            z-index: 1;
            top: 0;
            left: 0;
            background-color: #111;
            overflow-x: hidden;
            transition: 0.5s;
            padding-top: 60px;
        }

            .sidenav a {
                padding: 8px 8px 8px 32px;
                text-decoration: none;
                font-size: 18px;
                color: #818181;
                display: block;
                transition: 0.3s;
            }

                .sidenav a:hover {
                    color: #f1f1f1;
                }

            .sidenav .closebtn {
                position: absolute;
                top: 0;
                right: 25px;
                font-size: 36px;
                margin-left: 50px;
            }

        #main {
            transition: margin-left .5s;
            padding: 16px;
        }

        @@media screen and (max-height: 450px) {
            .sidenav {
                padding-top: 15px;
            }

                .sidenav a {
                    font-size: 18px;
                }
        }

        .img1 {
            border-radius: 50%;
        }
    </style>
</head>
<body>
    <div id="mySidenav" class="sidenav">
        @if (Fonksiyonlar.FirmaLogo != "")
        {
            <div style="text-align:center">
                <img src="/Fotograf/@Fonksiyonlar.FirmaLogo" class="img1" alt="Avatar" style="width:40px">
            </div>
            <a href="/Index/FirmaProfil">@Fonksiyonlar.LoginAD</a>
        }
        else
        {
            <div style="text-align:center">
                <img src="/Fotograf/none.png" class="img1" alt="Avatar" style="width:40px">
            </div>

            <a href="/Index/FirmaProfil">@Fonksiyonlar.LoginAD</a>
        }
        <hr style="color:white" />
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
        <a href="/Home/Alinan"><i class="fa fa-plane"></i> BİLET İŞLEMLERİ</a>
        <a href="/Index/FirmaSeferler"><i class="fa fa-plane"></i> SEFERLER</a>
        <a href="/Index/SeferOlustur"><i class="fa fa-plus"></i> SEFER OLUŞTUR</a>
        <a href="/Index/FirmaTasitBilgileri"><i class="fa fa-plane"></i> TAŞIT BİLGİLERİ</a>
        <a href="/Index/Yorum?&ID=@Fonksiyonlar.LoginID"><i class="fa fa-commenting"></i> YORUMLAR</a>
        <a href="/Index/FirmaCuzdan"><i class="fa fa-credit-card"></i> CÜZDAN</a>
        <a href="/Index/Login?&ID=-1"><i class="fa fa-power-off"></i>  ÇIKIŞ YAP</a>
    </div>

    <div id="main">
        <span style="font-size:30px;cursor:pointer" onclick="openNav()">&#9776; MENÜ</span>
        <div class="p-5 bg-primary text-white text-center">
            <h1>SEYEHAT REZERVASYON SİSTEMİ</h1>
            <p>Firma Yönetim Paneli</p>
        </div>
        @RenderBody()
    </div>

    <script src="~/Scripts/jquery-3.6.1.min.js"></script>
    <script>
        function openNav() {
            document.getElementById("mySidenav").style.width = "250px";
            document.getElementById("main").style.marginLeft = "250px";
        }

        function closeNav() {
            document.getElementById("mySidenav").style.width = "0";
            document.getElementById("main").style.marginLeft = "0";
        }
    </script>
</body>
</html>
